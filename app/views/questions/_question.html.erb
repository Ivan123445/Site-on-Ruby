  <article class="card mb-3">
    <section class="card-header">
      <%= question.user.name_or_email %>
    </section>

    <div class="card-body">
      <h4><%= link_to question.title, question_path(question) %></h2>

      <section class="card-text">
        <time datetime="<%= question.fromated_created_at %>">
          <small><%= question.fromated_created_at %></small>
        </time>

        <p class="my-2">
          <%= truncate strip_tags(question.body), length: 150, omission: t('global.text.omission') %>       <!--обрезаем слишком длинные вопросы -->
        </p>
      </section>

      <%= link_to link_to t('global.button.show'), question_path(question), class: 'btn btn-outline-primary' %>
      <% if question.user_id == current_user.id %>
      <%= link_to link_to t('global.button.edit'), edit_question_path(question), class: 'btn btn-outline-secondary' %>
      <%= link_to link_to t('global.button.delete'), question_path(question), class: 'btn btn-outline-danger',
        data: {method: :delete, confirm: t('global.dialog.you_sure')} %>
      <% end %>
    </div>
  </article>